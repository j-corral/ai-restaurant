meta {
  name: Update Order Status (Admin)
  type: http
  seq: 3
}

patch {
  url: {{apiUrl}}/orders/admin/{{orderId}}/status?new_status=confirmed
  body: json
  auth: bearer
}

params:query {
  new_status: confirmed
}

auth:bearer {
  token: {{token}}
}

tests {
  test("Order status updated successfully", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody().status).to.equal('confirmed');
  });
}
